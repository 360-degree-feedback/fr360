<!DOCTYPE html>
<html>
<head>
  <title>360 degree feedback</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="icon" href="../images/flavicon.ico">
  <%= csrf_meta_tags %>
  <style>
    .back {
        background-image: url('../../assets/images/background.jpg');
    }
  </style>
</head>
<body class="back">

<!--</div>-->
<div class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-collapse collapse">
      <a class="navbar-brand">FR360</a>

      <ul class="nav nav-pills" style="{display: inline}">
        <% navs=Navigation.all %>
        <% navs.each do |nav| %>
            <li role="presentation" <%= 'class=' + (:controller.capitalize==nav.title.capitalize ? 'active':'') %> ><%= link_to nav.title , nav.permalink %> </li>
        <% end%>
      </ul>

    </div><!--/.nav-collapse -->
  </div><!--/.container-fluid -->
</div>


<%= yield %>

</body>
</html>
