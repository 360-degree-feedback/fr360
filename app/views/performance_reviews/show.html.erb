<% @page_title='Review details' %>
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="panel panel-<%= them %>">
				<div class="panel-heading"><h3>Review of <%= @performance_review.reviewee.full_name %></h3></div>
				<div class="panel-body">
					<% @performance_review.feedbacks.each do |x| %>
					<div class="panel panel-<%= them%>">
						<div class="panel-body">
							<strong>Question: </strong><%= x.question.description %><br>
							<p><strong>Comment: </strong><%= x.comment %></p>
						</div>
						<div class="panel-footer">
							Rating: <%= x.rating %>
						</div>
					</div>
					<% end %>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>