<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading"><h4>Update user details</h4></div>
        <div class="panel-body">
          <%= form_for @user, url: user_path(@user)  do |f|%>
              <%= render 'users/user_form', locals: {user: @user} %>
              <%= f.submit class: 'btn btn-default' %>
          <% end %>
        </div>
      </div>
    </div> <!--end column-->
  </div> <!--end row-->
</div>
