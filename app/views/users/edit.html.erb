<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading"><h4>Update user details</h4></div>
        <div class="panel-body">
          <%= form_for @user, url: user_path(@user)  do |f|%>
						<p class="alert alert-warning">If you are not changing your password, just re-enter the old one twice</p>
						<%= render partial: 'users/form', locals: {f: f} %>
						<%= link_to "Cancel and go back", users_path, class: 'btn btn-warning pull-right' %>
						<%= f.submit class: 'btn btn-info pull-left' %>
          <% end %>
        </div>
      </div>
    </div> <!--end column-->
  </div> <!--end row-->
</div>
