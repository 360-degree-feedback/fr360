<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading"><h4>Update user details</h4></div>
        <div class="panel-body">
          <%= form_for @user, url: user_path(@user)  do %>
              <div class="form-group">
                <label for="position">First Name:</label>
                <input type="text" class="form-control" id="first_name" name="user[first_name]" placeholder="Enter user's first name " value="<%= @user.first_name %>">
              </div>
              <div class="form-group">
                <label for="last_name">Last Name</label>
                <input type="text" class="form-control" id="summary" name="user[last_name]" placeholder="Enter user's last name" value="<%= @user.last_name %>">
              </div>
              <div class="form-group">
                <label for="email">Email:</label><br>
                <input type="email" class="form-control" id="email" name="user[email]" placeholder="Enter your email" value="<%= @user.email%>">
              </div>
              <div class="form-group">
                <label for="completed">Confirmation status:</label><br>
                <input type="text" class="form-control" id="completed" name="user[completed]" placeholder="Completion status" value="<%= @user.completed? ? 'Completed':'pending'%>">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
          <% end %>
        </div>
      </div>
    </div> <!--end column-->
  </div> <!--end row-->
</div>
