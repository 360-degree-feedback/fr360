<h1>User Page</h1>
<div class=" container">

  <div class="row">
    <div class="col-md-2">


    </div>
    <div class="col-md-8">
      <table class="table table-bordered table-striped">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Confirmation Status</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name%></td>
            <td><%= user.last_name%></td>
            <td><%= user.email%></td>
            <td><%= user.completed? ? 'Completed':'pending' %></td>
        </tr>
        <% end %>
      </table>
      <div class="btn btn-info"><%= link_to 'Add A new User',{ controller: 'users', action: :new} %> </div>

    </div>

    <div class="col-md-2">

    </div>
  </div>


</div>
