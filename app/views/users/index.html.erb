<% @page_title='Users' %>
<div class=" container">

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
			<% if @users.count==0 %>
				<div class="alert alert-info">No user in the db </div>
			<% else %>


      <div class="panel panel-info">
        <div class="panel-heading"><h3>List of users</h3></div>
      <div class="panel-body">
        <div>
          <%= pluralize(@users.count, 'user') +' found'%>
        </div>
      <table class="table table-bordered table-striped text-center">
        <tr>
          <th class="text-center">Name </th>
          <th colspan="4" class="text-center">Actions</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
					<td class="text-left"><%= user.full_name.capitalize %></td>
					<td><%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_user_path(user), class: 'btn btn-info' %></td>
					<td>
						<%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe , user_path(user), class: 'btn btn-danger',method: :delete, data: {confirm: 'Are you sure?'} %></td>
					<td>
						<%= link_to 'Review', new_user_performance_review_path(user), class: 'btn btn-info' %>
					</td>
					<td>
						<%= link_to 'Feed backs', member_path(user.id), class: 'btn btn-info' %>
					</td>
        </tr>
        <% end %>
      </table>

				<% if is_admin? %>
					<div class="row">
						<div class="col-md-1">
							<div><%= link_to 'Add A new User', new_user_path, class: 'btn btn-info' %></div>
						</div>
					</div>
				<% end %>
        </div>
      </div>
			<% end %>
    </div>

    <div class="col-md-2">

    </div>
  </div>


</div>
