<div class=" container">

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-info">
        <div class="panel-heading"><h3>List of users</h3></div>
      <div class="panel-body">
        <div>
          <%= pluralize(@users.count, 'user') +' found'%>
        </div>
      <table class="table table-bordered table-striped">
        <tr>
          <th class="text-center">First Name</th>
          <th class="text-center">Last Name</th>
          <th class="text-center">Email</th>
          <th colspan="3" class="text-center">Actions</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name%></td>
            <td><%= user.last_name%></td>
            <td><%= user.email%></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-info" %></td>
            <td><%= link_to 'Delete', user_path(user), class: "btn btn-danger",method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <td>
              <%= link_to 'Review', new_user_performance_review_path(user), class: 'btn btn-info' %>
            </td>
        </tr>
        <% end %>
      </table>
        </div>
      </div>
      <% if session[:email] %>
      <div class="row">
        <div class="col-md-1 col-md-offset-9">
            <div> <span class="glyphicon glyphicon-search" aria-hidden="true"></span> <%= link_to 'Add A new User', {action: :new}, class: 'btn btn-info' %> </div>
        </div>
      </div>
          <% end %>
    </div>

    <div class="col-md-2">

    </div>
  </div>


</div>
