<% @page_title='Question - Edit' %>
<div class="container">
  <div class="panel">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-info">
            <div class="panel-heading"><h4>Update titled <%= @question.title %></h4></div>
            <div class="panel-body">
            <%= form_for @question, url: question_path(@question)  do |f|%>
                <%= render partial: 'form', locals: {f: @question} %>
                <%= f.submit('Update question', class: 'btn btn-info')%>
								<%= link_to 'Cancel', questions_path, class: 'btn btn-warning pull-right' %>
						<% end %>
            </div>
          </div>
        </div>
      </div> <!--end column-->
    </div><!-- END ROW -->
		</div>
  </div>