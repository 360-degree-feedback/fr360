<div class="container">
  <div class="panel">

    <div class="panel-body">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-info">
            <div class="panel-heading"><h4>Update titled <%= @question.title %></h4></div>
            <div class="panel-body">
            <%= form_for @question, url: question_path(@question)  do |ff|%>
                <%= render partial: 'form', locals: {question: @question} %>
                <%= ff.submit('Update question', class: 'btn btn-info')%>
            <% end %>
            </div>
          </div>
        </div>
      </div> <!--end column-->
    </div><!-- END ROW -->

  </div>

  </div>




</div>

