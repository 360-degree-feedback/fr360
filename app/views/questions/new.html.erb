<div class="container">
  <h1 class="label-default">Add a new question:</h1>

  <div class="container">
    <%= form_for @question, url: questions_path do |f| %>
        <p>
          <%= f.label :position %><br>
          <%= f.text_field :position %>
        </p>

        <p>
          <%= f.label :summary %><br>
          <%= f.text_area :summary %>
        </p>

        <p>
          <%= f.label :question %><br>
          <%= f.text_area :question %>
        </p>
        <p>
          <%= f.label :max_rate %><br>
          <%= f.text_field :max_rate %>
        </p>

        <p>
          <%= f.submit %>
        </p>
    <% end %>
  </div>
</div>
