<% @page_title = 'Questions' %>
<div class="container">

  <div class="panel-heading"><h3>Questions</h3></div>

      <div><%= link_to '<span class="glyphicon glyphicon-plus"></span> Add a New Question'.html_safe, { controller: 'questions', action: :new} , class: 'btn btn-info'%> </div>
        <br> <br>
      <table class="table table-bordered table-striped text-center">
        <tr>
          <th class="text-center"> Question</th>
          <th class="text-center">Maximum rating</th>
          <th colspan="3" class="text-center">Actions</th>
        </tr>
        <% @questions.each do |question| %>
        <tr>
          <td><%= question.summary %></td>
          <td class="center"><%= question.max_rate %></td>
          <td class="action">
            <%= link_to('Show', question, class: 'btn btn-info') %></td>
          <td>
            <%= link_to('Edit', {:action => :edit, :id => question.id}, class: 'btn btn-info') %>
        </td>
        <td>
            <%= link_to('Delete', question_path(question),class: 'btn btn-danger', method: :delete, data: {:confirm => 'Are you sure'}) %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
</div>