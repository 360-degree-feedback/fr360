<% @page_title = 'Admin - New'%>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-2">
			<div class="panel panel-warning">
				<div class="panel-heading"><h3>Register a new admin</h3></div>
				<div class="panel-body">
					<%= form_for @admin , url: {action: 'create'} do |f|%>
						<%= render partial: 'admins/form', locals: {f: f }%>
						<%= f.submit 'Save admin', class: 'btn btn-warning' %>
					<% end %>
				</div>
			</div>
		</div>
	</div>

</div>